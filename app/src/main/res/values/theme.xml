<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Bold</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/off_white</item>
        <item name="android:alertDialogStyle">@style/AppTheme.AlertDialog</item>
        <item name="android:textColorPrimary">@color/colorPrimaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/general_white</item>
        <item name="android:textColorSecondary">@color/colorSecondaryTextColor</item>
        <item name="android:textColorHint">@color/md_grey_400</item>
        <item name="android:textColorPrimaryDisableOnly">@color/gray_background</item>
        <item name="android:textColorTertiary">@color/theme_text_tertiary</item>
        <item name="android:textColorTertiaryInverse">@color/general_white</item>
        <item name="android:divider">@color/colorDivider</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/theme_text_primary</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:itemTextAppearance">@style/PopupMenuListView</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Sub.Regular</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.FontPath.Sub.Regular</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.FontPath.Sub.Bold</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="android:editTextStyle">@style/DefaultEditText</item>
    </style>

    <style name="CheckboxTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorSecondaryTextColor</item>
    </style>

    <!-- OverFlow menu Styles -->
    <style name="PopupMenuListView" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:divider">@color/general_gray_light</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@color/general_white</item>
        <item name="android:textColor">@color/theme_text_primary</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/green_cursor_drawable</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:borderlessButtonStyle">?attr/borderlessButtonStyle</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:theme">@style/CheckboxTheme</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Sub.Regular</item>
    </style>

    <style name="RatingBar" parent="android:Widget.CompoundButton.Star">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="DefaultEditText" parent="android:Widget.EditText">
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Sub.Regular</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Sub.Regular</item>
    </style>

    <style name="CheckBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Title.Regular</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.Menu</item>
    </style>

    <style name="MyActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyActionBar.Title.Regular" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyActionBar.Menu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="MyActionBarSubTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/general_white</item>
        <item name="android:textSize">10sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="background">@color/general_white</item>
        <item name="android:bottomBright">@color/general_white</item>
        <item name="android:bottomDark">@color/general_white</item>
        <item name="android:centerBright">@color/general_white</item>
        <item name="android:centerDark">@color/general_white</item>
        <item name="android:centerMedium">@color/general_white</item>
        <item name="android:fullBright">@color/general_white</item>
        <item name="android:fullDark">@color/general_white</item>
        <item name="android:topBright">@color/general_white</item>
        <item name="android:topDark">@color/general_white</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/general_gray_dark</item>
        <item name="android:textSize">@dimen/font_small</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="HEADING1HIGHLIGHT">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/bright_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath.Bold</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

</resources>